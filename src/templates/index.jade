doctype
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    title Map - OpenStreetMap, Google, Yandex
    meta(name='description' content='Map - ипользование картографической библиотеки leaflet')
    meta(name='viewport' content='width=device-width, initial-scale=1')

    link(rel='stylesheet' href='//cdn.leafletjs.com/leaflet-0.7.5/leaflet.css')
    //- add CSS when production
    if config.isProduction
      link(rel='stylesheet' href='assets/styles/main.css')

  body
    #map
    script(src='//cdn.leafletjs.com/leaflet-0.7.5/leaflet.js')
    script(src='//api-maps.yandex.ru/2.0/?load=package.map&lang=ru-RU')
    script(src='//maps.google.com/maps/api/js?v=3.2&sensor=false')
    script(src='assets/scripts/main.js')
